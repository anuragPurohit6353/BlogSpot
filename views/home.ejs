<!DOCTYPE html>
<html lang="en">

<head>
  <style>
    .main {
      display: flex;
      justify-content: center;
      gap: 40px;
      flex-wrap: wrap;
    }
    img {
     object-fit: cover;
    }
  </style>
    <%- include("./partials/head") %>
    <title>Home</title>
</head>
<body>
    <%- include("./partials/nav") %>
    <div class="main container mt-4 ">
        <% blogs.forEach(blog => { %>
            <div class="card" style="width: 18rem;">
                <img src="<%= blog.coverImgURL %>" width="300px" height="300px" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"> <%= blog.title %></h5>
                  <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read</a>
                </div>
              </div>
      <%  }); %>
    </div>
    <%- include("./partials/script") %>
</body>
</html>








